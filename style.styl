@media screen and (max-width: 650px) 
    #pinterest-wrap
        .grid
            width:95%
            border:none
            zurui-line-bottom-light()
            &:nth-child(5n+1)
                width:95% !important
            &:first-child
                zurui-line-top-light()
//    
@media screen and (max-width: 480px) 
    #content
        .breadcrumb-list
            margin-bottom:20px
        h1.entry-title
            margin-bottom:20px
    #container
        padding:3px
    #wrapper
        padding:0px 5px

@media screen and (max-width: 320px) 
    #menu
        display:none
    
